<h1>User Stories</h1>
<div class="row">
	<% if (stories.length>0) { %> <% for( let i = 0; i < stories.length; i++ )
	{%>
	<div class="col s12 m4">
		<div class="card hoverable">
			<div class="card-image"></div>
			<div class="card-content center-align justified">
				<h5><%= stories[i].title %></h5>
				<p><%- stories[i].body.substring(0, 150)+"..." %></p>
				<div class="chip">
					<img src="<%= stories[i].user.image %> " alt="" />
					<a href="/stories/user/<%= stories[i].user._id %> "
						><%= stories[i].user.displayName %>
					</a>
				</div>
			</div>
			<div class="card-action center-align">
				<a href="/stories/<%= stories[i]._id %>" class="btn grey">
					Read More
				</a>
			</div>
		</div>
	</div>
	<% } %> <% } else {%>
	<p>There are no stories to display</p>
	<% } %>
</div>
