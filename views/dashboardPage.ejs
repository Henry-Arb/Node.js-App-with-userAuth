<h6>Dashboard</h6>
<h3>Welcome <%= name %></h3>
<p>Here are your stories:</p>
<% if(stories.length > 0){ %>
<table class="striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Date</th>
			<th>Status</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% for( let i = 0; i < stories.length; i++ ) { %>
		<tr>
			<td>
				<a href="/stories/<%= stories[i]._id %> "
					><%= stories[i].title %></a
				>
			</td>
			<td><%= moment(stories[i].createdAt).format(dateFormat) %></td>
			<td>
				<span class="dash-status"> <%= stories[i].status %> </span>
			</td>
			<td>
				<a
					href="/stories/edit/<%= stories[i]._id %> "
					class="btn btn-float hoverable"
				>
					<i class="fas fa-edit"></i>
				</a>
				<form
					action="/stories/<%= stories[i]._id %>"
					method="POST"
					id="delete-form"
				>
					<input type="hidden" name="_method" value="DELETE" />
					<button class="btn red hoverable" type="submit">
						<i class="fas fa-trash"></i>
					</button>
				</form>
			</td>
		</tr>
		<% } %>
	</tbody>
</table>
<% } else{ %>
<p>You have not written any stories yet</p>
<% } %>
